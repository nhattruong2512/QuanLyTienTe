<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_grey_bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_8dp"
            android:orientation="horizontal">

            <TextView
                android:text="@string/detail_2_dot"
                android:textColor="@color/black_color"
                android:textSize="@dimen/default_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_detail_body"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_blue_black"
                android:textSize="@dimen/default_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_8dp"
            android:layout_marginEnd="@dimen/small_8dp"
            android:layout_marginBottom="@dimen/small_8dp"
            android:orientation="horizontal">

            <TextView
                android:text="@string/amount_2_dot"
                android:textColor="@color/black_color"
                android:textSize="@dimen/default_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_detail_amount"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/blue_color2"
                android:textSize="@dimen/default_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_detail_delete"
        style="@style/btnDelete"
        android:layout_gravity="end|center"
        android:contentDescription="@null"/>
</LinearLayout>