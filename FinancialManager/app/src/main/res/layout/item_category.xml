<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/frm_category"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/bg_circle_selected"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_category"
            android:layout_gravity="center"
            android:layout_width="@dimen/icon_medium_size"
            android:layout_height="@dimen/icon_medium_size"
            android:scaleType="centerCrop" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/frm_category"
        app:layout_constraintLeft_toLeftOf="@+id/frm_category"
        app:layout_constraintRight_toRightOf="@+id/frm_category"
        android:textColor="@color/black_color"
        android:textSize="@dimen/default_text_size"/>
</android.support.constraint.ConstraintLayout>